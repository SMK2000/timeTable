<!-- here is function for sorting by date -->

<%
function mcompare( a, b ) {
    if ( a.midsemdate < b.midsemdate ){
      return -1;
    }
    if ( a.midsemdate > b.midsemdate ){
      return 1;
    }
    return 0;
  }
function ccompare( a, b ) {
    if ( a.compredate < b.compredate ){
      return -1;
    }
    if ( a.compredate > b.compredate ){
      return 1;
    }
    return 0;
  }
%>
